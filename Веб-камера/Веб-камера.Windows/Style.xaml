<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Веб_камера">

 
    <ImageBrush x:Key="ButtonBrush1" ImageSource="IconPhotoBefore.png" Stretch="Uniform" >
    </ImageBrush>
    
    <ImageBrush x:Key="ButtonBrush2" ImageSource="IconPhotoAfter.png" Stretch="Uniform" >
    </ImageBrush>

    <Style TargetType="Grid" x:Key="GridStyle">
        <Setter Property="Background" Value="#f7b293"/>
    </Style>
    
    <Style TargetType='Button' x:Key="ButtonStyle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="MaxWidth" Value="150"/>
        <Setter Property="MaxHeight" Value="150"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>
